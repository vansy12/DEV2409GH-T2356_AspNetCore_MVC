@{
    ViewData["Title"] = "Index";
    var accounts = ViewBag.accounts;
}

<div class="row">
    @foreach (var item in accounts)
    {
        <div class="col-md-4">
            <div class="thumbnail">
                <img src="@item.Avatar" alt="Avatar" />
                <div class="caption">
                    <h3>@item.Name</h3>
                    <p>@item.Bio</p>
                    <p>
                        <a asp-controller="Account" asp-action="Details" asp-route-id="@item.Id" class="btn btn-primary">View Profile</a>
                    </p>
                </div>
            </div>
        </div>
    }
</div>